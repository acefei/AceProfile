[merge]
    tool = meld

[diff]
    tool = meld

[user]
    name = Fei Su
    email = fei.su@citrix.com

[credential]
    helper = store

[push]
    default = simple

[alias]
    up = !sh -c 'git pull --rebase && git push'
    lp = log --graph --pretty=format:'%C(yellow)%d%Creset %C(cyan)%h%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=short --all
    co = checkout
    cob = checkout -b
    br = branch
    brv = branch -vv
    st = status
    rv = remote -vv
    dc = diff --cached
    dcf = diff --name-only --cached
    dp = diff HEAD^
    dpf = diff --name-only HEAD^
    caa = commit -a --amend --no-edit
    pf = push -f
    pr = pull --rebase
    ri = !git rebase -i $(git merge-base --fork-point origin/HEAD HEAD)
    rc = !git add -A && git rebase --continue

# Get the current branch name
branch-name = "!git rev-parse --abbrev-ref HEAD"

# Push the current branch to the remote "origin", and set it to track
# the upstream branch
publish = "!git push -u origin $(git branch-name)"

# Delete the remote version of the current branch
unpublish = "!git push origin :$(git branch-name)"

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
